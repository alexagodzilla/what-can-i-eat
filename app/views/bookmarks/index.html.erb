<div class="profile-container">
  <div class="banner">
      <h2><%= link_to "Bookmarks", profile_bookmarks_path, id: "header-pink" %></h2>
      <h2><%= link_to "My Pantry", profile_ingredients_path %></h2>
      <h2><%= link_to "Friends", profile_friends_path %></h2>
  </div>
  <div class="cards">
    <% if @user_bookmarks.empty? %>
      <h4>No bookmarks yet...</h4>
    <% else %>
      <% @user_bookmarks.each do |bookmark| %>
        <div class="card-recipe" data-cards-target="card" data-average-rating=<%= bookmark.recipe.average_rating || 0 %>>
          <div class="container">
            <i class="fa-solid fa-bookmark me-1"></i>
            <%= image_tag bookmark.recipe.image_url, alt: "Image of recipe" %>
            <div class="card-recipe-infos" >
              <p><%= link_to bookmark.recipe.title, recipe_path(bookmark.recipe) %></p>
            </div>
              <div class="text-bottom">
                <div class="text-bottom-left">
                  <% if bookmark.recipe.reviews.empty? %>
                    <p>No reviews</p>
                  <% else %>
                    <p><%= bookmark.recipe.average_rating.round(1) %> ⭐️</p>
                  <% end %>
                </div>
                <div class="text-bottom-right">
                  <p><i class="fa-solid fa-clock"></i> <%= minutes_to_hour(bookmark.recipe.total_time) %></p>
                </div>
              </div>
              <div class="delete-bookmark">
                <%= link_to bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete your bookmark?" } do %>
                  <i class="fa-solid fa-trash-can"></i>
                <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
